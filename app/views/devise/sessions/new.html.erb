<% provide(:header, "hidden")  %>
<% provide(:aside, "hidden")  %>
  <div class="container-fluid sign-in">
    <div class="container-margin">
      <img id="compu" class="hidden-sm hidden-xs" src="<%= root_url %>login-pc.png">
      <div class="row">
        <div class="col-md-4 col-md-offset-0 text-center">
          <h1 class="registrate-gratis">Inicia sesión en SONE</h1>
        </div>
      </div>

      <div class="row">
      <div class="col-md-4" style="z-index: 20">
        <%= link_to image_tag("3.png", class: "img-100 margin-top-20  hidden-sm hidden-xs"), root_path, "data-turbolinks" => false %>
      </div>
        <div class="col-xs-4 col-md-2 col-md-offset-0 pad-left text-center width">
          <div class="text-center registration-links">
            <!--<div class="col-xs-3 col-md-3">
              <p class="con gray">con</p>
            </div> -->
            <div class="col-xs-4 col-md-2" style="display: inline-flex;"">
              <p class="con gray">con</p><%= link_to user_facebook_omniauth_authorize_path do %>
                <img class="login-icons face-icon" src="<%= root_url %>face-icon.svg" alt="">
              <% end %>
            </div>
            <div class="col-xs-4 col-md-2">
              <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                <img class="login-icons", id="space-icon" src="<%= root_url %>google-plus.svg" alt="">
              <% end %>
            </div>
            <div class="col-xs-4 col-md-2">
              <%= link_to new_user_registration_path do %>
              <img class="login-icons" src="<%= root_url %>mail.svg" alt="">
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="row margin-top-up">
            <div class="col-md-12">
              <h3 class="tienes-cuenta gray">¿Ya tienes una cuenta?</h3>
             
            </div>
            <div class="col-md-12" style="z-index: 0">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
                <div class="form-group">
                  <%= image_tag("icono-mail.svg", class: " img-responsive img-abs") %>
                  <%= f.email_field :email, autofocus: true, class: 'form-control border-sign_up padding-left-15 padding-inside gray', placeholder: "Correo".html_safe %>
                </div>

                <div class="form-group">
                  <%= image_tag("iconos-block.svg", class: " img-responsive img-abs") %>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control border-sign_up padding-left-15 padding-inside gray', placeholder: 'Contraseña' %>
                </div>

                <%# if devise_mapping.rememberable? -%>
                  <!-- <div class="form-group">
                    <%#= f.check_box :remember_me %>
                    <%#= f.label 'Recordarme', class: 'control-label' %>
                  </div> -->
                <%# end -%>

                <div class="form-group">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "forgot-pass text-pink" %><br /> <br>
                  <% end -%>
                  <%= f.submit "Iniciar Sesión", class: 'btn pull-right', id: 'login-button' %>
                </div>
              <% end %>

              <%#= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%#= render "devise/shared/links" %>
