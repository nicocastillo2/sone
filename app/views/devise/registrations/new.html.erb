          <% end %>

        <br>
      </div>
    </div>
    <div class="sociales heigth-50">
      <div class="row text-center">
        <h1 class="text-center green">¡Regístrate gratis!</h1>
        <div class="col-md-8 col-md-offset-2 ">
          <div class="row text-center registration-links margin-icon">
            <div class="col-xs-4 col-md-4">
              <p class="con", id="margin-con">con</p>
            </div>
            <div class="col-xs-4 col-md-4">
              <%= link_to user_facebook_omniauth_authorize_path do %>
                <%= image_tag("static/facebookverde.svg", class: 'login-icon') %>
              <% end %>
            </div>
            <div class="col-xs-4 col-md-4">
              <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                <%= image_tag("static/googleverde.svg", class: 'login-icon') %>
              <% end %>
            </div>
          </div>
        </div>  
      </div>
    </div>
    <% end %>
  </div>
</div>
