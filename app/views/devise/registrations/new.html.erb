<% provide(:header, "hidden")  %>
<% provide(:aside, "hidden")  %>
<div class="row heigth-100" style="padding: 0;">
  <div class="col-md-4 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 pull-sm-5 col-xs-push-0 ">
    <h1 class="text-center text-pink font-40">Sign up</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group form-sign-up">
            <%= f.label :username, class: 'control-label text-gray' %>
            <%= image_tag("static/user2.svg", class: " img-responsive img-fixed") %>
            <%= f.text_field :username, autofocus: true, class: 'form-control form-pink' %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'control-label text-gray' %>
            <%= image_tag("static/MAIL.svg", class: " img-responsive img-fixed icon-size") %>
            <%= f.email_field :email, autofocus: true, class: 'form-control form-pink' %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'control-label text-gray' %>
            <%= image_tag("static/Candado.svg", class: " img-responsive img-fixed") %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control form-pink' %>
            <% if @minimum_password_length %>
            <em class="gray"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'control-label text-gray' %>
            <%= image_tag("static/candado2.svg", class: " img-responsive img-fixed icon-size") %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-pink' %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn btn-default pink-show right', id:"sign-up" %>
          </div>
  </div>
  <div class="col-md-6 col-md-offset-1 col-sm-12 col-xs-12 heigth-100 push-sm-5 col-xs-pull-0">
    <div class="form-group avatar-gray heigth-50 div-avatar">
      <div class="text-center">
      <br>
        <br>

<!--        <%#= image_tag("avatar.png", class: 'img-responsive center-image border-circle hidden-xs image-edit') %> -->
        <%= f.file_field :avatar, class: 'inputfile'%>
          <%= f.label :avatar, 'avatar.png' , class: "control-label" do %>
