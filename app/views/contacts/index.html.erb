<div class="page-header">
  <%= link_to new_contact_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t("views.contacts.index.title") %>
  <% end %>
  <h1><%= t("views.contacts.index.subtitle") %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @contacts) do |contact| %>
            <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: t("views.contacts.index.destroy_notice") } %></td>
      <% end %>
    </tbody>
  </table>
</div>
