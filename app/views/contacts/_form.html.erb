<%= form_for(@contact, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t("views.contacts.form.close_button") %></span></button>
      <h4><%= pluralize(@contact.errors.count, "error", 'errores') %><%= t("views.contacts.form.error_message") %></h4>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t("views.contacts.form.email"), class: "col-sm-4 control-label text-gray-form" %>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit t("views.contacts.form.update_button"), class: "btn send-button" %>
    </div>
  </div>
<% end %>
