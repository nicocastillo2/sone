<div class="row">
  <div class="col-md-1"><br></div>
  <div class="col-md-10">
    <div class="page-header">
      <%= link_to new_campaign_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        Nueva Campaña
      <% end %>
      <h1>Campañas</h1>
    </div>


    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th class="th-no-border">Nombre</th>
            <th class="th-no-border">Nombre del Remitente</th>
            <th class="th-no-border">Email del Remitente</th>
            <th class="th-no-border">Logo</th>
            <th class="th-no-border">Color</th>
            <th class="th-no-border"><span class="glyphicon glyphicon-eye-open"></span></th>
            <th class="th-no-border"><span class="glyphicon glyphicon-pencil"></span></th>
            <th class="th-no-border center"><span class="glyphicon glyphicon-trash"></span></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @campaigns) do |campaign| %>
            <td><%= campaign.name %></td>
            <td><%= campaign.sender_name %></td>
            <td><%= campaign.sender_email %></td>
            <td><%= campaign.logo %></td>
            <td><%= campaign.color %></td>
            <td class="text-center"><%= link_to 'show', campaign %></td>
            <td class="text-center"><%= link_to 'edit', edit_campaign_path(campaign) %></td>
            <td class="text-center"><%= link_to 'delete', campaign, method: :delete, data: { confirm: 'Are you sure?' }%></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>
