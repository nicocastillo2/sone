<div class="page-header">
  <%= link_to new_campaign_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Campaña
  <% end %>
  <h1>Campañas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Nombre del Remitente</th>
            <th>Email del Remitente</th>
            <th>Logo</th>
            <th>Color</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @campaigns) do |campaign| %>
            <td><%= campaign.name %></td>
            <td><%= campaign.sender_name %></td>
            <td><%= campaign.sender_email %></td>
            <td><%= campaign.logo %></td>
            <td><%= campaign.color %></td>
            <td class="text-center"><%= link_to '', campaign, class: 'glyphicon glyphicon-eye-open' %></td>
        <td class="text-center"><%= link_to '', edit_campaign_path(campaign), class: 'glyphicon glyphicon-pencil index-icons' %></td>
        <td class="text-center"><%= link_to '', campaign, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash index-icons' %></td>
      <% end %>
    </tbody>
  </table>
</div>
