<% provide(:title, t("views.campaigns.campaigns_index.main_title")) %>

<div class="row" style="margin-left: 0;margin-right: 0;column-rule-style: ">
  <div class="col-md-10 col-md-offset-1">

    <div class="table-responsive table-shadow">
      <table class="table table-striped table-bordered table-hover table-no-margin">
        <thead>
          <tr id="tr-pad">
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header1") %></th>
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header2") %></th>
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header3") %></th>
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header4") %></th>
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header5") %></th>
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header6") %></th>
            <th class="th-no-border"><%= t("views.campaigns.campaigns_index.table_header7") %></th>
            <th class="th-no-border"></th>
            <th class="th-no-border"></th>
            <th class="th-no-border center"></th>
          </tr>
        </thead>
        <tbody>
          <% @last_index = @campaigns.size-1 %>
          <% @campaigns.each_with_index do |campaign, index| %>
            <%if index == 0%>
              <tr class="td-no-border">
                <td class="tr-pad text-center td-no-border padding-bottom middle-align"><%= link_to campaign.name, campaign, class: @current_plan == 'freelancer' && @last_index >=0 && @last_index != index ? "gray" : "black"%></td>
                <td class="tr-pad text-center td-no-border padding-bottom middle-align"><%= campaign.sender_name %></td>
                <td class="tr-pad text-center td-no-border padding-bottom middle-align"><%= campaign.sender_email %></td>
                <td class="tr-pad text-center td-no-border padding-bottom middle-align"><%= campaign.surveys_counter %></td>
                <td class="tr-pad text-center td-no-border padding-bottom middle-align"><%= campaign.total_answers %></td>
                <td class="tr-pad text-center td-no-border padding-bottom middle-align width-10"><%= image_tag(campaign.logo, class: "logo-cam") %></td>
                <td class="tr-pad text-center td-no-border padding-bottom middle-align"><div class="box-color text-center div-center" style="background-color: <%=campaign.color%>;"></div></td>
                <td class="text-center tr-pad td-no-border padding-bottom middle-align"><%= link_to '', campaign, class: "black glyphicon glyphicon-eye-open table-icons pink" %></td>
                <td class="text-center tr-pad td-no-border padding-bottom middle-align"><%= link_to '', edit_campaign_path(campaign), class: "black glyphicon glyphicon-pencil table-icons pink" %></td>
                <td class="text-center tr-pad td-no-border padding-bottom middle-align"><%= link_to '', campaign, class: "black glyphicon glyphicon-trash table-icons pink", method: :delete, data: { confirm: t("views.campaigns.campaigns_index.delete_campaign") }%></td>
              </tr>
            <% else %>
              <tr>
                <td class="td-no-border text-center padding-bottom middle-align"><%= link_to campaign.name, campaign, class: @current_plan == 'freelancer' && @last_index >=0 && @last_index != index ? "gray" : "black"%></td>
                <td class="td-no-border text-center padding-bottom middle-align"><%= campaign.sender_name %></td>
                <td class="td-no-border text-center padding-bottom middle-align"><%= campaign.sender_email %></td>
                <td class="td-no-border text-center padding-bottom middle-align"><%= campaign.surveys_counter %></td>
                <td class="td-no-border text-center padding-bottom middle-align"><%= campaign.total_answers %></td>
                <td class="td-no-border text-center padding-bottom middle-align width-10"><%= image_tag(campaign.logo,class: "logo-cam") %></td>
                <td class="td-no-border text-center padding-bottom middle-align"><div class="box-color div-center" style="background-color: <%=campaign.color%>;"></div></td>
                <td class="text-center td-no-border padding-bottom middle-align"><%= link_to '', campaign, class: "black glyphicon glyphicon-eye-open table-icons pink" %></td>
                <td class="text-center td-no-border padding-bottom middle-align"><%= link_to '', edit_campaign_path(campaign), class: "black glyphicon glyphicon-pencil table-icons pink" %></td>
                <td class="text-center td-no-border padding-bottom middle-align"><%= link_to '', campaign, class: "black glyphicon glyphicon-trash table-icons pink", method: :delete, data: { confirm: t("views.campaigns.campaigns_index.delete_campaign") }%></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
