<% provide(:header, "hidden")  %>
<% provide(:aside, "hidden")  %>
<% if @status %>
  <div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4 class="text-center">Ya contestaste esta encuesta</h4>
  </div>
  </div>
<% else %>
  <div class="row" style="width: 100%;">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="text-gray text-center">Tu Calificación fue: <%= @score %> </h1>
      <h3 class="text-gray text-center">Déjanos tus comentarios</h3>
      <br>
      <%= form_for(@answer, url: edit_answer_path(@answer), html: { method: "patch", class: " form-pink", role: "form" }) do |f| %>
        <% if @answer.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h4>

            <ul>
            <% @answer.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group" >
          <div class="col-md-8 col-md-offset-2 ">
            <%= f.text_area :comment, size: '4x6', class: "form-control form-pink", placeholder: '...' %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <div class="col-sm-10 text-center">
            <%= f.submit class: "btn btn-default pink-show center" %>
          </div>
        </div>
      <% end %>
    </div>
    

  </div>

<% end %>
