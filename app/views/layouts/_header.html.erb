<div class="content-container container ">
  <nav class="menu-top hidden-sm hidden-xs">
    <% if user_signed_in? %>
      <div class="col-md-4 col-xs-3">
      </div>

      <div class="col-md-2 col-xs-3 text-right black-list-header" >
        <%= link_to "Black List", blacklist_path, id: 'black-list' %>
      </div>

      <div class="col-md-3 col-xs-3 text-right">
        <%= link_to new_campaign_path, class: current_user.payment.plan_name == "freelancer" && current_user.campaigns.count > 0 ? 'btn border-pink white disabled' : 'btn border-pink white' do %>
          Crear campaña
          <span class="glyphicon pink glyphicon-plus pink padding-left"></span>
        <% end %>
      </div>
      <div class="col-md-3 col-xs-3 text-right">
        <span class="glyphicon pink glyphicon-user "></span>
        <%=current_user.email %>
      </div>
    <% else %>
      <%=link_to "Iniciar sesión", new_user_session_path %>
    <% end %>
  </nav>
</div>
