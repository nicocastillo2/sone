    gtag('config', '<%= I18n.locale == :'es-ES' ? "UA-104558130-3" : "UA-104558130-4" %>');
  </script>
<% end %>

</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to image_tag("1.png", id: "sone_icon"), root_path, "data-turbolinks" => false %>
        <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#navbar-toggle-menu" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-center navbar-brand-center">
        <!-- <a class="nav-btn navbar-text navbar-brand-center center-links">Precios</a> -->
        <%= link_to(t("views.layouts.static_header.link_pricing"), pricing_path(anchor: 'info-planes'), class: "nav-btn navbar-text navbar-brand-center center-links", "data-turbolinks" => false) %>
        <%= link_to(t("views.layouts.static_header.link_blog"), blog_path, class: "nav-btn navbar-text navbar-brand-center center-links", "data-turbolinks" => false) %>
      </div>
      <div class="collapse navbar-collapse" id="navbar-toggle-menu">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
        <%= link_to url_for(locale: :"es-ES"), id: "spanish-es", class: "nav-btn navbar-text nav-lang-es" do %>
          <span class="flag-icon flag-icon-squared flag-icon-es"></span> ES 
        <% end %>

        <%= link_to url_for(locale: :"es-MX"), id: "spanish-mx", class: "nav-btn navbar-text nav-lang-mx" do %>                                                                                                                                              
          <span class="flag-icon flag-icon-squared flag-icon-mx"></span> MX
        <% end %>
        
        <%= link_to t("views.layouts.static_header.link_pricing"), pricing_path(anchor: 'info-planes'), class: 'nav-btn navbar-text show-toggle-menu hidden-md hidden-lg' %>
        <%# link_to t("views.layouts.static_header.link_blog"), blog_path ,class: 'nav-btn navbar-text show-toggle-menu hidden-md hidden-lg' %>
        <!-- <a class="nav-btn navbar-text show-toggle-menu hidden-md hidden-lg">Precios</a> -->
        <% if user_signed_in? %>
          <%= link_to(campaigns_path, id: 'login', class: "nav-btn margin-right-0 navbar-text navbar-link navbar-right green", "data-turbolinks" => false) do %>
            <span class="green"><%= t("views.layouts.static_header.app_access") %></span>
          <% end %>
        <% else %>
          <%= link_to(new_user_session_path, id: 'width-inicio', class: "nav-btn navbar-text navbar-link navbar-right green", "data-turbolinks" => false) do %>
            <span class="green"><%= t("views.layouts.static_header.login") %></span>
          <% end %>
        <% end %>
        <button href="" id="faq" class="nav-btn navbar-text navbar-right pink faq"><span class="white"><%= t("views.layouts.static_header.link_FAQ") %></span> <span class="pink">?</span></button>
      </div>
    </div>
  </nav>

  <script type="text/javascript">
    $('.faq, .faq *').click(function(){
      if($("#faq-title").size() == 0){
        $(location).attr('href', '<%= pricing_path + '#faq-title' %>');
      }else{
        $(location).attr('href', '<%= pricing_path + '#faq-title' %>');
        $("html, body").animate({ scrollTop: $("#faq-title").offset().top }, 850);
      }
    });
  </script>

  <%= yield %>

</body>
</html>
