/></noscript>
<!-- End Facebook Pixel Code -->


<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-104558130-1"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-104558130-1');
</script>


</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to image_tag("1.png", id: "sone_icon"), root_path, "data-turbolinks" => false %>
        <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#navbar-toggle-menu" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-center navbar-brand-center">
        <!-- <a class="nav-btn navbar-text navbar-brand-center center-links">Precios</a> -->
        <%= link_to('Precios', pricing_path(anchor: 'info-planes'), class: "nav-btn navbar-text navbar-brand-center center-links", "data-turbolinks" => false) %>
        <%= link_to('Blog', "https://blog.sone.com.mx/", class: "nav-btn navbar-text navbar-brand-center center-links", "data-turbolinks" => false) %>
      </div>
      <div class="collapse navbar-collapse" id="navbar-toggle-menu">
        <%= link_to 'Precios', pricing_path(anchor: 'info-planes'),class: 'nav-btn navbar-text show-toggle-menu hidden-md hidden-lg' %>
        <%= link_to 'Blog', 'https://blog.sone.com.mx/',class: 'nav-btn navbar-text show-toggle-menu hidden-md hidden-lg' %>
        <!-- <a class="nav-btn navbar-text show-toggle-menu hidden-md hidden-lg">Precios</a> -->
        <% if user_signed_in? %>
          <%= link_to(campaigns_path, id: 'login', class: "nav-btn margin-right-0 navbar-text navbar-link navbar-right green", "data-turbolinks" => false) do %>
            <span class="green">Dashboard</span>
          <% end %>
        <% else %>
          <%= link_to(new_user_session_path, id: 'width-inicio', class: "nav-btn navbar-text navbar-link navbar-right green", "data-turbolinks" => false) do %>
            <span class="green">Iniciar Sesión</span>
          <% end %>
        <% end %>
        <button href="" id="faq" class="nav-btn navbar-text navbar-right pink faq"><span class="white">FAQ</span> <span class="pink">?</span></button>
      </div>
    </div>
  </nav>

  <script type="text/javascript">
    $('.faq, .faq *').click(function(){
      if($("#faq-title").size() == 0){
        $(location).attr('href', 'pricing#faq-title')
      }else{
        $(location).attr('href', '<%= pricing_path + '#faq-title' %>')
        $("html, body").animate({ scrollTop: $("#faq-title").offset().top }, 850);
      }
    });
  </script>

  <%= yield %>

</body>
</html>
