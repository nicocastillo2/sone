<% content_for :conekta_scripts do %>
  <script type="text/javascript" src="https://conektaapi.s3.amazonaws.com/v0.3.2/js/conekta.js"></script>
  <script type="text/javascript">
  // Conekta Public Key
  Conekta.setPublishableKey('<%= Rails.application.secrets.conekta_public %>');

  var conektaSuccessResponseHandler = function(token) {
    console.log(token);
    var $form = $("#card-form");
    //Inserta el token_id en la forma para que se envíe al servidor
    $form.append($("<input type=\"hidden\" name=\"conektaTokenId\" />").val(token.id));
    $form.get(0).submit(); //Hace submit
  };
  var conektaErrorResponseHandler = function(response) {
    var $form = $("#card-form");
    $form.find(".card-errors").text(response.message_to_purchaser);
    $form.find("button").prop("disabled", false);
  };

  //jQuery para que genere el token después de dar click en submit
  $(function () {
    $("#card-form").submit(function(event) {
      var $form = $(this);
      // Previene hacer submit más de una vez
      $form.find("button").prop("disabled", true);
      Conekta.token.create($form, conektaSuccessResponseHandler, conektaErrorResponseHandler);
      return false;
    });
  });

</script>

<% end %>

<%= form_tag(payments_path, id: 'card-form', method: "post", class: "form-inline") do %>
  <span class="card-errors"></span>
  <div class="form-group">
    <label>
      <span>Nombre del tarjetahabiente</span>
      <input class="form-control" type="text" size="20" name="name" data-conekta="card[name]" value="<%= @payment.full_name %>" />
    </label>
  </div>
  <div class="form-group">
    <label>
      <span>Telefono</span>
      <input class="form-control" type="text" size="20" name="phone" data-conekta="card[phone]" value="<%= @payment.phone %>"/>
    </label>
  </div>
  <div class="form-group">
    <label>
      <span>Número de tarjeta de crédito</span>
      <input class="form-control" type="text" size="20" data-conekta="card[number]"/>
    </label>
  </div>
  <div class="form-group">
    <label>
      <span>CVC</span>
      <input class="form-control" type="text" size="4" data-conekta="card[cvc]"/>
    </label>
  </div>
  <div class="form-group">
    <label>
      <span>Fecha de expiración (MM/AAAA)</span>
      <input class="form-control" type="text" size="2" data-conekta="card[exp_month]"/>
    </label>
    <span>/</span>
    <input class="form-control" type="text" size="4" data-conekta="card[exp_year]"/>
  </div>
  <button type="submit">Pagar ahora!</button>
<% end %>
