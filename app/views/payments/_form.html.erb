<% content_for :conekta_scripts do %>
  <script type="text/javascript" src="https://conektaapi.s3.amazonaws.com/v0.3.2/js/conekta.js"></script>
  <script type="text/javascript">
  // Conekta Public Key
  Conekta.setPublishableKey('<%= Rails.application.secrets.conekta_public %>');

  var conektaSuccessResponseHandler = function(token) {
    var $form = $("#card-form");
    //Inserta el token_id en la forma para que se envíe al servidor
    $form.append($("<input type=\"hidden\" name=\"conektaTokenId\" />").val(token.id));
    setTimeout(function() {
      console.log("time");
      $form.get(0).submit(); //Hace submit
    }, 1500);
  };
  var conektaErrorResponseHandler = function(response) {
    var $form = $("#card-form");
    $form.find(".card-errors").text(response.message_to_purchaser);
    $form.find("button").prop("disabled", false);
  };

  //jQuery para que genere el token después de dar click en submit
  $(function () {
    $("#card-form").submit(function(event) {
      var $form = $(this);
      // Previene hacer submit más de una vez
      $form.find("button").prop("disabled", true);
      Conekta.token.create($form, conektaSuccessResponseHandler, conektaErrorResponseHandler);
      return false;
    });
  });

</script>

<% end %>

<%= form_tag(payments_path, id: 'card-form', method: "post", class: "form-inline") do %>
  <span class="card-errors"></span>
  <div class="form-group">
    <label>
      <span><%= t("views.payments.payment_form.name") %></span>
      <input id="name" class="form-control field-pay" type="text" size="20" name="name" data-conekta="card[name]" required/>
    </label>
  </div>
  <br>
  <br>
  <div class="form-group">
    <label>
      <span><%= t("views.payments.payment_form.phone") %></span>
      <input class="form-control field-pay" type="text" size="20" name="phone" data-conekta="card[phone]" required/>
      <%= image_tag("master.png", class: "img-responsive card-img") %>
      <%= image_tag("visa.png", class: "img-responsive card-img") %>
      <%= image_tag("american.png", class: "img-responsive card-img") %>

    </label>
  </div>
  <br>
  <div class="row ">
    <div class="col-md-2"><br></div>
    <div class="col-md-8 target ">
      <div class="form-group">
      <h3><%= t("views.payments.payment_form.subtitle") %></h3>

      <br>
      <%= image_tag("chip.png", class: "img-responsive chip") %>
      <br>
      <label>
        <span><%= t("views.payments.payment_form.credit_card") %></span><br>
        <input class="form-control field-pay" type="text" size="20" data-conekta="card[number]" maxlength="16" required/>
      </label>
    </div>
    <br>
    <div class="form-group">
      <label class="fecha">
        <span><%= t("views.payments.payment_form.expire_date") %></span><br>
        <input class="form-control field-pay date" type="text" size="2" maxlength="2" data-conekta="card[exp_month]" required/>

      <span>/</span>
      <input class="form-control field-pay date" type="text" size="4" maxlength="4" data-conekta="card[exp_year]" required/>
      </label>
    </div>
    <div class="form-group">
      <label>
        <span><%= t("views.payments.payment_form.cvc") %></span>
        <input class="form-control field-pay" type="text" size="4" maxlength="4" data-conekta="card[cvc]" required/>
      </label>
    </div>
    <br>

    <button type="submit" class="pay-now"><%= t("views.payments.payment_form.confirm_button") %></button>
    </div>
    <div class="col-md-2"></div>
  </div>
<% end %>
